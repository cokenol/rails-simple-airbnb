<div class="banner" style="background-image: url('<%= @flat.picture_url  %>')">
  <div class="container show">
    <div class="cards d-flex">
      <div class="col-8">
        <div class="card p-4 my-2">
          <h2><%= @flat.name %></h2>
          <h4 class="font-weight-light"><%= @flat.address %></h4>
        </div>
        <div class="card p-4 my-2">
        <h4>A bit more about this flat...</h4>
        <p><%= @flat.description %></p>
        </div>
      </div>

      <div class="col-4">
        <div class="card p-4 my-2">
          <h5>Book this place!</h5>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend">
              <div class="input-group-text">From:</div>
            </div>
            <input type="text" class="form-control" id="inlineFormInputGroupFrom" placeholder="24/11/2021">
          </div>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend">
              <div class="input-group-text">To:</div>
            </div>
            <input type="text" class="form-control" id="inlineFormInputGroupTo" placeholder="30/11/2021">
          </div>
          <button type="submit" class="btn btn-success btn-block">Book</button>
        </div>
        <div class="card p-4 my-2">
        <h2>Details:</h2>
        <h6><i class="fas fa-users"></i> <%= @flat.number_of_guests %> | <i class="fas fa-pound-sign"></i> <%= @flat.price_per_night %></h6>
        </div>
        <div class="card p-4 my-2">
        <h5>Share</h5>
        <div class="links d-flex justify-content-between">
          <i class="fab fa-facebook"></i>
          <i class="fab fa-twitter-square"></i>
          <i class="fab fa-pinterest-square"></i>
          <i class="fas fa-envelope-square"></i>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
